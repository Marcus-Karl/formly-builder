{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "$id": "/assets/schemas/dependency/dependency",
  "type": "array",
  "title": "Dependencies",
  "default": [],
  "widget": {
    "formlyConfig": {
      "className": "formly-build-page-form-min-height flex column"
    }
  },
  "items": {
    "title": "Select One",
    "type": "object",
    "oneOf": [
      {
        "$ref": "#/definitions/all-of"
      },
      {
        "$ref": "#/definitions/any-of"
      },
      {
        "$ref": "#/definitions/one-of"
      },
      {
        "$ref": "#/definitions/inner-dependency"
      }
    ]
  },
  "definitions": {
    "inner-dependency": {
      "type": "object",
      "title": "Inner Dependencies",
      "default": [],
      "properties": {
        "inner": {
          "type": "array",
          "default": [],
          "widget": {
            "formlyConfig": {
              "className": "margin-left-2"
            }
          },
          "items": {
            "type": "object",
            "oneOf": [
              {
                "$ref": "#/definitions/all-of"
              },
              {
                "$ref": "#/definitions/any-of"
              },
              {
                "$ref": "#/definitions/one-of"
              }
            ]
          }
        }
      }
    },
    "all-of": {
      "type": "object",
      "title": "Match All",
      "widget": {
        "formlyConfig": {
          "defaultValue": {},
          "className": "margin-left-2"
        }
      },
      "properties": {
        "type": {
          "default": "allOf",
          "const": "allOf"
        },
        "entry": {
          "title": "Enter Value",
          "type": "string"
        }
      }
    },
    "any-of": {
      "type": "object",
      "title": "Match Any",
      "widget": {
        "formlyConfig": {
          "defaultValue": {},
          "className": "margin-left-2"
        }
      },
      "properties": {
        "type": {
          "default": "anyOf",
          "const": "anyOf"
        },
        "entry": {
          "title": "Enter Value",
          "type": "string"
        }
      }
    },
    "one-of": {
      "type": "object",
      "title": "Match One",
      "widget": {
        "formlyConfig": {
          "defaultValue": {},
          "className": "margin-left-2"
        }
      },
      "properties": {
        "type": {
          "default": "oneOf",
          "const": "oneOf"
        },
        "entry": {
          "title": "Enter Value",
          "type": "string"
        }
      }
    }
  }
}