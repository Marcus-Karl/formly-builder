{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "$id": "/assets/schemas/forms/form-settings",
  "type": "object",
  "title": "Settings",
  "properties": {
    "type": {
      "type": "string",
      "title": "Form Type",
      "widget": {
        "formlyConfig": {
          "type": "select",
          "defaultValue": "",
          "expressions": {
            "props.options": "field.options?.formState?.builder?.options['Form'] || []"
          }
        }
      }
    },
    "name": {
      "type": "string",
      "title": "Form Name",
      "widget": {
        "formlyConfig": {
          "type": "input",
          "defaultValue": "",
          "hide": true
        }
      }
    },
    "label": {
      "type": "string",
      "title": "Form Label",
      "widget": {
        "formlyConfig": {
          "type": "input",
          "defaultValue": ""
        }
      }
    }
  },
  "required": [
    "formType",
    "label"
  ]
}