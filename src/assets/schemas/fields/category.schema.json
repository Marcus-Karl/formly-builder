{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "$id": "/assets/schemas/fields/category",
  "type": "string",
  "title": "Select Field Category",
  "widget": {
    "formlyConfig": {
      "type": "toggle-button-field",
      "defaultValue": "",
      "templateOptions": {
        "classes": "center-self",
        "required": true
      },
      "expressionProperties": {
        "templateOptions.options": "field.options?.formState?.builder?.options['FieldCategory'] || []"
      },
      "hideExpression": "field.templateOptions._selectionComplete"
    }
  }
}