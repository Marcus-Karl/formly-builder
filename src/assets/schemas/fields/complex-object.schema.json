{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "$id": "/assets/schemas/fields/complex-object",
  "type": "array",
  "title": "Configure Fields",
  "minItems": 0,
  "default": [],
  "widget": {
    "formlyConfig": {
      "className": "formly-build-page-form-min-height flex column pad",
      "type": "page-fields",
      "props": {
        "hideLabel": false
      }
    }
  },
  "items": {
    "type": "object",
    "default": {},
    "widget": {
      "formlyConfig": {
        "type": "tab-form",
        "props": {
          "hideButtons": true,
          "linear": false
        }
      }
    },
    "properties": {
      "category": {
        "$ref": "category.schema.json"
      },
      "basic": {
        "$ref": "basic.schema.json"
      },
      "extra": {
        "$ref": "extras.schema.json"
      },
      "advanced": {
        "$ref": "advanced.schema.json"
      }
    },
    "required": [
      "category"
    ]
  }
}