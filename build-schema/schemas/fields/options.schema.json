{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "$id": "fields/options",
  "type": "array",
  "title": "Configure Options",
  "minItems": 1,
  "default": [],
  "widget": {
    "formlyConfig": {
      "type": "options-editor",
      "props": {
        "isOptional": true
      }
    }
  },
  "items": {
    "type": "object",
    "properties": {
      "value": {
        "type": "string",
        "default": "",
        "widget": {
          "formlyConfig": {
            "type": "input",
            "props": {
              "placeholder": "Enter a name..."
            }
          }
        }
      },
      "label": {
        "type": "string",
        "default": "",
        "widget": {
          "formlyConfig": {
            "type": "input",
            "props": {
              "placeholder": "Enter a label..."
            }
          }
        }
      }
    },
    "required": [
      "value",
      "label"
    ]
  }
}