{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "$id": "fields/field-picker",
  "type": "object",
  "default": {},
  "widget": {
    "formlyConfig": {
      "type": "page-form",
      "props": {
        "linear": true,
        "hideLabel": true,
        "hideButtons": true
      }
    }
  },
  "properties": {
    "category": {
      "$ref": "./category.schema.json"
    }
  },
  "required": [
    "category"
  ],
  "dependencies": {
    "category": {
      "oneOf": [
        {
          "widget": {
            "formlyConfig": {
              "type": "tab-form",
              "props": {
                "hideButtons": false,
                "linear": false
              }
            }
          },
          "properties": {
            "category": {
              "const": "free-response-field"
            },
            "basic": {
              "$ref": "./basic.schema.json"
            },
            "extra": {
              "$ref": "./extras.schema.json"
            }
          }
        },
        {
          "widget": {
            "formlyConfig": {
              "type": "tab-form",
              "props": {
                "hideButtons": true,
                "linear": false
              }
            }
          },
          "properties": {
            "category": {
              "const": "multiple-choice-field"
            },
            "basic": {
              "$ref": "./basic.schema.json"
            },
            "options": {
              "$ref": "./options.schema.json"
            },
            "extra": {
              "$ref": "./extras.schema.json"
            }
          }
        },
        {
          "widget": {
            "formlyConfig": {
              "type": "tab-form",
              "props": {
                "hideButtons": true,
                "linear": false
              }
            }
          },
          "properties": {
            "category": {
              "const": "display-content-field"
            },
            "basic": {
              "$ref": "./basic.schema.json"
            },
            "edit": {
              "$ref": "./edit-display-content.schema.json"
            },
            "preview": {
              "$ref": "./preview-display-content.schema.json"
            }
          }
        },
        {
          "widget": {
            "formlyConfig": {
              "type": "tab-form",
              "props": {
                "hideButtons": true,
                "linear": false
              }
            }
          },
          "properties": {
            "category": {
              "const": "complex-object-field"
            },
            "basic": {
              "$ref": "./basic.schema.json"
            },
            "objectSchema": {
              "$ref": "./complex-object.schema.json"
            }
          }
        },
        {
          "widget": {
            "formlyConfig": {
              "type": "tab-form",
              "props": {
                "hideButtons": true,
                "linear": false
              },
              "wrappers": [
                "preconfigured-schema-wrapper"
              ]
            }
          },
          "properties": {
            "category": {
              "const": "preconfigured-schema"
            },
            "basic": {
              "$ref": "./basic.schema.json"
            },
            "objectSchema": {
              "$ref": "./preconfigured-schema.schema.json"
            }
          }
        }
      ]
    }
  }
}