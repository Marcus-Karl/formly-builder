{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "$id": "fields/basic",
  "type": "object",
  "title": "Basic Information",
  "default": {},
  "widget": {
    "formlyConfig": {
      "className": "flex pad",
      "expressions": {
        "hide": "field.parent.model.category === 'display-content-field'"
      },
      "props": {
        "isOptional": true
      }
    }
  },
  "properties": {
    "type": {
      "type": "string",
      "title": "Field Type",
      "default": "",
      "widget": {
        "formlyConfig": {
          "type": "select",
          "expressions": {
            "props.options": "field.options?.formState?.builder?.options['FieldType'].filter(x => x.category === field.parent.parent.model.category) || []"
          }
        }
      }
    },
    "subType": {
      "type": "string",
      "title": "Sub Field Type",
      "default": "",
      "widget": {
        "formlyConfig": {
          "type": "select",
          "expressions": {
            "hide": "!field.props.options?.length",
            "props.options": "field.options?.formState?.builder?.options['FieldSubType'].filter(x => x.category === field.model.type) || []"
          }
        }
      }
    },
    "name": {
      "type": "string",
      "title": "Field Name",
      "default": "",
      "widget": {
        "formlyConfig": {
          "type": "input",
          "validators": {
            "validation": [
              "valid-name"
            ]
          }
        }
      }
    },
    "label": {
      "type": "string",
      "title": "Field Label",
      "default": "",
      "widget": {
        "formlyConfig": {
          "type": "input"
        }
      }
    }
  },
  "required": [
    "label",
    "type"
  ]
}